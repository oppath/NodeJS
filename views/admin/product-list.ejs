<!DOCTYPE html>
<html lang="en">

<head>
  <%- include layout/header.ejs %>
</head>

<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%- include layout/navigation.ejs %>
    <%- include layout/sidebar.ejs %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Product List</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <table id="listing" class="table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Status</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <!-- Disply category listing-->
                      <% if (products.length > 0) {  %>
                      <% products.forEach(product => { %>
                      <tr>
                        <td><%= product.title %></td>
                        <td><%= product.categoryId.title %></td>
                        <td><%= product.price %></td>
                        <td><img src="/uploads/<%= product.image %>" style="height: 80px; width: 80px;"
                            alt="<%= product.title %>">
                        </td>
                        <td>
                          <a href="/product/statusupdate/<%=product._id%>/<%=product.status%>"
                            class="btn <%- (product.status == true) ? 'btn-success' : 'btn-danger' %> btn-sm"
                            style="color: #fff;">Active</a>
                        </td>
                        <td>
                          <div class="timeline-footer" style="color: #fff;">
                            <a href="/product/edit/<%=product._id%>" class="btn btn-primary btn-sm"><i
                                class="fas fa-edit" title="edit"></i> Edit</a>
                            <a href="/product/delete/<%=product._id%>" class="btn btn-danger btn-sm"><i
                                class="fas fa-trash" title="Delete"></i> Delete</a>
                          </div>
                        </td>
                      </tr>
                      <% }); %>
                      <% } %>
                    </tbody>
                  </table>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include layout/footer.ejs %>
  </div>
  <!-- ./wrapper -->
  <%- include layout/js.ejs %>
</body>

</html>